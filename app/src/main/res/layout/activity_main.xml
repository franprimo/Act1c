<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fe030303">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:background="#1decff"
        android:baselineAligned="false"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rojo"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:background="#ff291e"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Verde"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:background="#64ff2d"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Azul"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:background="#2128ff"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Amarillo"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:background="#fffc1a"
            android:layout_margin="5dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#6eff51">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Columna_uno"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#43fffd"
            android:textColor="#fc020202" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Columna_dos"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#43fffd"
            android:textColor="#fc020202" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Columna_tres"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#43fffd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fc020202" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Columna_cuatro"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:background="#43fffd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fc020202" />
    </LinearLayout>


</LinearLayout>
